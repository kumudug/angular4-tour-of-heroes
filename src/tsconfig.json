{
  "compilerOptions": {
    "types": [
            // add node as an option
            "node",
            "jasmine"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "../node_modules/@types"
         ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
